                android:layout_height="wrap_content"
                android:id="@+id/q5_c"
                android:text="@string/quiz_q5C"
                android:checked="false"/>
        </RadioGroup>
    </LinearLayout>
//Question 6
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_quiz_20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz_question6"/>
        <EditText
            android:layout_width="@dimen/width_quiz_answerEditText"
            android:layout_height="wrap_content"
            android:drawableBottom="@color/black"
            android:id="@+id/q6_answer"/>
    </LinearLayout>
//Question 7
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_quiz_20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz_question7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_quiz_answerLeft"
            android:layout_marginTop="@dimen/margin_quiz_answerTop"
            android:id="@+id/q7_answer">
            <CheckBox
                android:id="@+id/q7_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_q7A"/>
            <CheckBox
                android:id="@+id/q7_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_q7B"/>
            <CheckBox
                android:id="@+id/q7_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_q7C"/>
            <CheckBox
                android:id="@+id/q7_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_q7D"/>
        </LinearLayout>
    </LinearLayout>
//Question 8
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_quiz_20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz_question8"/>
        <EditText
            android:layout_width="@dimen/width_quiz_answerEditText"
            android:layout_height="wrap_content"
            android:drawableBottom="@color/black"
            android:id="@+id/q8_answer"/>
    </LinearLayout>
//Question 9
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_quiz_20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz_question9"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_quiz_answerLeft"
            android:layout_marginTop="@dimen/margin_quiz_answerTop"
            android:id="@+id/q9_answer">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/q9_a"
                android:text="@string/quiz_q9A"
                android:checked="false"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/q9_b"
                android:text="@string/quiz_q9B"
                android:checked="false"/>
        </RadioGroup>
    </LinearLayout>
//Question 10
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_quiz_20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz_question10"/>
        <EditText
            android:layout_width="@dimen/width_quiz_answerEditText"
            android:layout_height="wrap_content"
            android:drawableBottom="@color/black"
            android:id="@+id/q10_answer"/>
    </LinearLayout>
//Submit button
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/padding_quiz_20dp"
                android:text="@string/quiz_submitBtn"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/padding_quiz_20dp"/>
            <Button
                android:id="@+id/restart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/padding_quiz_20dp"
                android:text="@string/quiz_restartBtn"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/padding_quiz_20dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>